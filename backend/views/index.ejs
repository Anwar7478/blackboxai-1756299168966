<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>
    
    <div class="container">
        <div class="main-layout">
            <%- include('partials/sidebar') %>
            
            <main class="main-content">
                <!-- Feature Bar -->
                <div class="feature-bar">
                    <div class="feature-item">
                        <h4>HOME DELIVERY</h4>
                        <p>24-72 Hours</p>
                    </div>
                    <div class="feature-item">
                        <h4>Best Warranty Policy</h4>
                        <p>With A 30 Day</p>
                    </div>
                    <div class="feature-item">
                        <h4>SECURE SHOPPING</h4>
                        <p>100% Safe Transactions</p>
                    </div>
                    <div class="feature-item">
                        <h4>ORDER PLACED</h4>
                        <p>Total 1,84,560 +</p>
                    </div>
                </div>

                <!-- Featured Products Section -->
                <section class="section">
                    <div class="section-header">
                        <h2 class="section-title">Our Featured Items</h2>
                        <a href="/products?featured=1" class="view-all-btn">View All Feature</a>
                    </div>
                    
                    <div class="product-grid">
                        <% if (typeof featuredProducts !== 'undefined' && featuredProducts.length > 0) { %>
                            <% featuredProducts.forEach(product => { %>
                                <div class="product-card">
                                    <div class="product-image">
                                        <% if (product.image) { %>
                                            <img src="<%= product.image %>" alt="<%= product.name %>" style="width: 100%; height: 100%; object-fit: cover;">
                                        <% } else { %>
                                            Product Image
                                        <% } %>
                                    </div>
                                    <div class="product-info">
                                        <h3 class="product-name"><%= product.name %></h3>
                                        <div class="product-price">৳<%= product.price %></div>
                                        <div class="product-actions">
                                            <button class="btn btn-primary add-to-cart" data-product-id="<%= product.id %>">Add to Cart</button>
                                            <button class="btn btn-secondary add-to-wishlist" data-product-id="<%= product.id %>">Wishlist</button>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <!-- Placeholder products -->
                            <% for(let i = 0; i < 8; i++) { %>
                                <div class="product-card">
                                    <div class="product-image">Product Image</div>
                                    <div class="product-info">
                                        <h3 class="product-name">Sample Product <%= i + 1 %></h3>
                                        <div class="product-price">৳<%= (Math.random() * 1000 + 100).toFixed(0) %></div>
                                        <div class="product-actions">
                                            <button class="btn btn-primary">Add to Cart</button>
                                            <button class="btn btn-secondary">Wishlist</button>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                </section>

                <!-- New Products Section -->
                <section class="section">
                    <div class="section-header">
                        <h2 class="section-title">Collected New Items</h2>
                        <a href="/products?new=1" class="view-all-btn">View All Item</a>
                    </div>
                    
                    <div class="product-grid">
                        <% if (typeof newProducts !== 'undefined' && newProducts.length > 0) { %>
                            <% newProducts.forEach(product => { %>
                                <div class="product-card">
                                    <div class="product-image">
                                        <% if (product.image) { %>
                                            <img src="<%= product.image %>" alt="<%= product.name %>" style="width: 100%; height: 100%; object-fit: cover;">
                                        <% } else { %>
                                            Product Image
                                        <% } %>
                                    </div>
                                    <div class="product-info">
                                        <h3 class="product-name"><%= product.name %></h3>
                                        <div class="product-price">৳<%= product.price %></div>
                                        <div class="product-actions">
                                            <button class="btn btn-primary add-to-cart" data-product-id="<%= product.id %>">Add to Cart</button>
                                            <button class="btn btn-secondary add-to-wishlist" data-product-id="<%= product.id %>">Wishlist</button>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <!-- Placeholder products -->
                            <% for(let i = 0; i < 8; i++) { %>
                                <div class="product-card">
                                    <div class="product-image">New Product Image</div>
                                    <div class="product-info">
                                        <h3 class="product-name">New Product <%= i + 1 %></h3>
                                        <div class="product-price">৳<%= (Math.random() * 1000 + 100).toFixed(0) %></div>
                                        <div class="product-actions">
                                            <button class="btn btn-primary">Add to Cart</button>
                                            <button class="btn btn-secondary">Wishlist</button>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                </section>

                <!-- Browse By Top Niche -->
                <section class="section">
                    <h2 class="section-title">Browse By Top Niche</h2>
                    
                    <div class="tabs">
                        <button class="tab active" data-tab-content="top-sales">Top Sales</button>
                        <button class="tab" data-tab-content="top-rating">Top Rating</button>
                        <button class="tab" data-tab-content="top-discount">Top Discount</button>
                    </div>
                    
                    <div id="top-sales" class="tab-content">
                        <div class="product-grid">
                            <% for(let i = 0; i < 4; i++) { %>
                                <div class="product-card">
                                    <div class="product-image">Top Sales Product</div>
                                    <div class="product-info">
                                        <h3 class="product-name">Top Sales Product <%= i + 1 %></h3>
                                        <div class="product-price">৳<%= (Math.random() * 1000 + 100).toFixed(0) %></div>
                                        <div class="product-actions">
                                            <button class="btn btn-primary">Add to Cart</button>
                                            <button class="btn btn-secondary">Wishlist</button>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                    <div id="top-rating" class="tab-content" style="display: none;">
                        <div class="product-grid">
                            <% for(let i = 0; i < 4; i++) { %>
                                <div class="product-card">
                                    <div class="product-image">Top Rated Product</div>
                                    <div class="product-info">
                                        <h3 class="product-name">Top Rated Product <%= i + 1 %></h3>
                                        <div class="product-price">৳<%= (Math.random() * 1000 + 100).toFixed(0) %></div>
                                        <div class="product-actions">
                                            <button class="btn btn-primary">Add to Cart</button>
                                            <button class="btn btn-secondary">Wishlist</button>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                    <div id="top-discount" class="tab-content" style="display: none;">
                        <div class="product-grid">
                            <% for(let i = 0; i < 4; i++) { %>
                                <div class="product-card">
                                    <div class="product-image">Discounted Product</div>
                                    <div class="product-info">
                                        <h3 class="product-name">Discounted Product <%= i + 1 %></h3>
                                        <div class="product-price">৳<%= (Math.random() * 1000 + 100).toFixed(0) %></div>
                                        <div class="product-actions">
                                            <button class="btn btn-primary">Add to Cart</button>
                                            <button class="btn btn-secondary">Wishlist</button>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </section>

                <!-- Shop By Categories -->
                <section class="section">
                    <div class="section-header">
                        <h2 class="section-title">Shop By Categories</h2>
                        <a href="/categories" class="view-all-btn">View All Category</a>
                    </div>
                    
                    <div class="product-grid">
                        <% if (typeof topCategories !== 'undefined' && topCategories.length > 0) { %>
                            <% topCategories.forEach(category => { %>
                                <div class="product-card">
                                    <div class="product-image">
                                        <% if (category.image) { %>
                                            <img src="<%= category.image %>" alt="<%= category.name %>" style="width: 100%; height: 100%; object-fit: cover;">
                                        <% } else { %>
                                            <%= category.name %>
                                        <% } %>
                                    </div>
                                    <div class="product-info">
                                        <h3 class="product-name"><%= category.name %></h3>
                                        <p><%= category.product_count || 0 %> Products</p>
                                        <a href="/categories/<%= category.id %>" class="btn btn-primary">View Category</a>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <!-- Placeholder categories -->
                            <% for(let i = 0; i < 6; i++) { %>
                                <div class="product-card">
                                    <div class="product-image">Category <%= i + 1 %></div>
                                    <div class="product-info">
                                        <h3 class="product-name">Category <%= i + 1 %></h3>
                                        <p><%= Math.floor(Math.random() * 50) + 1 %> Products</p>
                                        <a href="/categories" class="btn btn-primary">View Category</a>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                </section>

                <!-- Shop By Brands -->
                <section class="section">
                    <div class="section-header">
                        <h2 class="section-title">Shop By Brands</h2>
                        <a href="/brands" class="view-all-btn">View All Brands</a>
                    </div>
                    
                    <div class="product-grid">
                        <% for(let i = 0; i < 6; i++) { %>
                            <div class="product-card">
                                <div class="product-image">Brand <%= i + 1 %></div>
                                <div class="product-info">
                                    <h3 class="product-name">Brand <%= i + 1 %></h3>
                                    <p><%= Math.floor(Math.random() * 30) + 1 %> Products</p>
                                    <a href="/brands/<%= i + 1 %>" class="btn btn-primary">View Brand</a>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </section>
            </main>
        </div>
    </div>
    
    <%- include('partials/footer') %>
    
    <script src="/js/main.js"></script>
</body>
</html>
