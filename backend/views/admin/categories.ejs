<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        .admin-layout {
            display: flex;
            min-height: 100vh;
        }
        
        .admin-sidebar {
            width: 250px;
            background: #2c3e50;
            color: white;
            padding: 0;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
        }
        
        .admin-header {
            background: var(--primary-color);
            color: white;
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid #34495e;
        }
        
        .admin-nav {
            padding: 0;
        }
        
        .admin-nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .admin-nav li {
            border-bottom: 1px solid #34495e;
        }
        
        .admin-nav a {
            display: block;
            padding: 15px 20px;
            color: #bdc3c7;
            text-decoration: none;
            transition: all 0.3s;
        }
        
        .admin-nav a:hover,
        .admin-nav a.active {
            background: #34495e;
            color: white;
        }
        
        .admin-content {
            flex: 1;
            margin-left: 250px;
            padding: 30px;
            background: #f8f9fa;
            min-height: 100vh;
        }
        
        .admin-header-bar {
            background: white;
            padding: 20px;
            margin: -30px -30px 30px -30px;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .admin-form {
            background: white;
            padding: 30px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            margin-bottom: 30px;
        }
        
        .admin-table {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            overflow: hidden;
        }
        
        .admin-table table {
            width: 100%;
            border-collapse: collapse;
        }
        
        .admin-table th,
        .admin-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }
        
        .admin-table th {
            background: #f8f9fa;
            font-weight: 600;
            color: var(--text-color);
        }
        
        .admin-table tr:hover {
            background: #f8f9fa;
        }
        
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }
        
        .form-row.full {
            grid-template-columns: 1fr;
        }
        
        .btn-group {
            display: flex;
            gap: 5px;
        }
        
        .btn-sm {
            padding: 6px 12px;
            font-size: 12px;
        }
        
        .btn-danger {
            background: #dc3545;
            color: white;
            border: none;
        }
        
        .btn-danger:hover {
            background: #c82333;
        }
        
        .badge {
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 500;
        }
        
        .badge-primary {
            background: #d1ecf1;
            color: #0c5460;
        }
        
        @media (max-width: 768px) {
            .admin-sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s;
            }
            
            .admin-content {
                margin-left: 0;
            }
            
            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="admin-layout">
        <aside class="admin-sidebar">
            <div class="admin-header">
                <h2>Heriken Admin</h2>
            </div>
            <nav class="admin-nav">
                <ul>
                    <li><a href="/admin/dashboard">üìä Dashboard</a></li>
                    <li><a href="/admin/products">üì¶ Products</a></li>
                    <li><a href="/admin/categories" class="active">üìÇ Categories</a></li>
                    <li><a href="/admin/orders">üõí Orders</a></li>
                    <li><a href="/admin/customers">üë• Customers</a></li>
                    <li><a href="/" target="_blank">üåê View Website</a></li>
                </ul>
            </nav>
        </aside>
        
        <main class="admin-content">
            <div class="admin-header-bar">
                <h1>Manage Categories</h1>
            </div>
            
            <!-- Add Category Form -->
            <div class="admin-form">
                <h3>Add New Category</h3>
                <form id="addCategoryForm" action="/admin/categories/add" method="POST">
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Category Name *</label>
                            <input type="text" name="name" class="form-input" required placeholder="Enter category name">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" style="margin-top: 25px;">Add Category</button>
                        </div>
                    </div>
                    
                    <div class="form-row full">
                        <div class="form-group">
                            <label class="form-label">Description</label>
                            <textarea name="description" class="form-input" rows="3" placeholder="Category description (optional)"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            
            <!-- Categories List -->
            <% if (categories && categories.length > 0) { %>
                <div class="admin-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Slug</th>
                                <th>Products</th>
                                <th>Description</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categories.forEach(category => { %>
                                <tr>
                                    <td><strong><%= category.name %></strong></td>
                                    <td><code><%= category.slug %></code></td>
                                    <td>
                                        <span class="badge badge-primary">
                                            <%= category.product_count || 0 %> products
                                        </span>
                                    </td>
                                    <td>
                                        <% if (category.description) { %>
                                            <%= category.description.length > 50 ? category.description.substring(0, 50) + '...' : category.description %>
                                        <% } else { %>
                                            <em style="color: var(--text-light);">No description</em>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(category.created_at).toLocaleDateString() %></td>
                                    <td>
                                        <div class="btn-group">
                                            <button onclick="deleteItem('/admin/categories/<%= category.id %>', 'category')" class="btn btn-sm btn-danger">Delete</button>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="admin-table">
                    <div style="padding: 40px; text-align: center; color: var(--text-light);">
                        <h3>No Categories Found</h3>
                        <p>Start by adding your first category using the form above.</p>
                    </div>
                </div>
            <% } %>
        </main>
    </div>
    
    <script src="/js/main.js"></script>
    <script>
        document.getElementById('addCategoryForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            fetch('/admin/categories/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showMessage(data.message, 'success');
                    this.reset();
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    showMessage(data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showMessage('An error occurred while adding the category', 'error');
            });
        });
        
        function deleteItem(url, itemName) {
            if (confirm(`Are you sure you want to delete this ${itemName}?`)) {
                fetch(url, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showMessage(data.message, 'success');
                        setTimeout(() => {
                            location.reload();
                        }, 1000);
                    } else {
                        showMessage(data.message, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showMessage('An error occurred', 'error');
                });
            }
        }
    </script>
</body>
</html>
